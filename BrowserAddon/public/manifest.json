{
  "name": "Комментарии Pikabu",
  "version": "0.0.17",
  "description": "Комментарии Pikabu",
  "permissions": ["https://*.pikabu.ru/", "https://peoplemeter.ru/"],
  "content_scripts": [
    {
      "matches": ["https://*.pikabu.ru/@*", "https://*.pikabu.ru/profile/*"],
      "css": ["user-profile.css"],
      "js": ["user-profile.js"]
    }
  ],
  "icons": {
    "16": "images/icon@16.png",
    "32": "images/icon@32.png",
    "48": "images/icon@48.png",
    "128": "images/icon@128.png"
  },
  "manifest_version": 2
}